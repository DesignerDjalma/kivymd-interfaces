ScreenManager:
    TelaInicial:
    TelaPrincipal:


<CaixaEntradaDeDados@MDFloatLayout>:
    pos_hint: {"center_x": .5, "center_y": .5} # Alterar
    size_hint: .8, .08

<CaixaImagem@Image>:
    source: "" # Alterar
    pos_hint: {"center_x": .96, "center_y": .55}
    size_hint: .7, .7

<CaixaTitulo@MDLabel>:
    text: "" # Alterar
    font_size: "14sp"
    font_name: "Poppins-Medium.ttf"
    pos_hint: {"center_x": .5, "center_y": .9} 

<CaixaInput@TextInput>:
    text: "" # Alterar
    size_hint_y: .75
    font_name: "Poppins-Regular.ttf"
    pos_hint: {"center_x": .49, "center_y": .4} 
    background_color: 0, 0, 0, 0    
    cursor_color: 0, 0, 0, 1
    cursor_width: "2sp"
    foreground_color: 120/255, 120/255, 120/255, 1
    font_size: "17sp"
    multiline: False

<BotaoPadrao@Button>:
    text: "Traduzir"
    background_color: 0, 0, 0, 0
    font_name: "Poppins-Medium.ttf"
    size_hint: .79, .065
    pos_hint: {"center_x": .5, "center_y": .45}   
    on_release: root.loga(cpf.text, senha.text)      
        
    canvas.before:
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [2]  
        Color:
            rgb: 25/255, 38/255, 35/255, 1

<BotaoPadraoPreto>:
    BotaoPadrao:
        canvas.before:
            Color:
                rgb: 3/255, 3/255, 3/255, 1

<TelaInicial>:
    
    name: 'tela_boas_vindas'    
    
    MDFloatLayout:
        md_bg_color: 188/255, 227/255, 217/255, 1
        Image:
            pos_hint: {"center_x": .54, "center_y": .6}
            size_hint: .50, .50
            source: "./images/encrypted.png"
            canvas.before:
                Color:
                    rgb: 1, .85, .825, 1   
        MDIconButton:
            pos_hint: {"center_x": .5, "center_y": .12}      
            user_font_size: "45sp"
            icon: "chevron-right"
            on_press:
                app.root.current = 'tela_principal'
            
        MDLabel:
            id: titulo
            # text: "Decifrador λνμΘ"
            #font_size:"55sp"
            font_name: "Poppins-SemiBold.ttf"
            text: "Decifrador 1.0"
            font_size:"35sp"
            text_color: 0, 0, 0
            pos_hint: {"center_x": .5, "center_y": .28}       
            halign: "center"
            theme_text_color: "Custom"

        MDLabel:
            text: "Decifra mensagens super secretas!"   
            text_color: 0, 0, 0 
            pos_hint: {"center_x": .5, "center_y": .21}       
            font_size:"13sp"
            halign: "center"
            theme_text_color: "Custom"
            font_name: "Poppins-Regular.ttf"


