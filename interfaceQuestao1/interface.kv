ScreenManager:
    TelaInicial:
    TelaPrincipal:
    TelaAjuda:
    TelaSalvar:

<CaixaEntradaDeDados@MDFloatLayout>:
    pos_hint: {"center_x": .5, "center_y": .5} # Alterar
    size_hint: .8, .08
    MDFloatLayout:
        pos_hint: {"center_x": .5, "center_y": 0}
        size_hint_y: .03    
        md_bg_color: 120/255, 120/255, 120/255, 1

<CaixaImagem@Image>:
    source: "" # Alterar
    pos_hint: {"center_x": .96, "center_y": .55}
    size_hint: .7, .7

<CaixaTitulo@MDLabel>:
    text: "" # Alterar
    font_size: "14sp"
    font_name: "Poppins-Medium.ttf"
    pos_hint: {"center_x": .5, "center_y": .9} 

<CaixaInput@TextInput>:
    text: "" # Alterar
    size_hint_y: .75
    #font_name: "Poppins-Regular.ttf"
    pos_hint: {"center_x": .49, "center_y": .4} 
    background_color: 0, 0, 0, 0  
    cursor_color: 0, 0, 0, 1
    cursor_width: "2sp"
    foreground_color: 0, 0, 0, 1
    font_size: "17sp"
    multiline: False

<BotaoPadrao@Button>:
    text: "" # Alterar
    background_color: 25/255, 38/255, 35/255, 1
    font_name: "Poppins-Medium.ttf"
    size_hint: .40, .065
    pos_hint: {"center_x": .5, "center_y": .45}
    canvas.before:
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [2]  
        Color:
            rgb: 25/255, 38/255, 35/255, 1



<TelaInicial>:
    name: 'tela_boas_vindas'    
    MDFloatLayout:
        
        Image:
            pos_hint: {"center_x": .54, "center_y": .6}
            size_hint: .50, .50
            source: "./images/encrypted.png"
            canvas.before:
                Color:
                    rgb: 1, .85, .825, 1 

        MDIconButton:
            pos_hint: {"center_x": .5, "center_y": .12}      
            user_font_size: "45sp"
            icon: "chevron-right"
            on_press:
                app.root.current = "tela_principal"
                app.root.transition.direction = "left"
                
            
        MDLabel:
            id: titulo
            # text: "Decifrador λνμΘ"
            #font_size:"55sp"
            font_name: "Poppins-SemiBold.ttf"
            text: "Decifrador 1.0"
            font_size:"35sp"
            text_color: 0, 0, 0
            pos_hint: {"center_x": .5, "center_y": .28}       
            halign: "center"
            theme_text_color: "Custom"

        MDLabel:
            text: "Decifra ou Codifica letras, números, caracteres e afins!"   
            text_color: 0, 0, 0 
            pos_hint: {"center_x": .5, "center_y": .21}       
            font_size:"13sp"
            halign: "center"
            theme_text_color: "Custom"
            font_name: "Poppins-Regular.ttf"

<TelaPrincipal>:
    name: 'tela_principal'
 
    md_bg_color: 188/255, 227/255, 217/255, 1

    pos_hint: {"center_x": .5, "center_y": .5}
    size_hint: 1.0, 1.0

    Image:
        source: "images/detetive.png"       
        size_hint: .2, .2
        pos_hint: {"center_x": .25, "center_y": .86}

    MDLabel:
        id: nomeDetetive
        text: "..."
        font_size: "28sp"
        font_name: "Poppins-SemiBold.ttf"
        pos_hint: {"center_x": .6, "center_y": .73}   

        # Deslocado
    
    CaixaEntradaDeDados:
        pos_hint: {"center_x": .5, "center_y": .6}
        CaixaTitulo:
            text: "MENSAGEM"
        CaixaImagem:
            source: "../images/msgbinario.png"
        CaixaInput:
            id: mensagemInicial


    Button:
        text: "Traduzir" # Alterar
        on_release: root.traduzir()
        background_color: 25/255, 38/255, 35/255, 1
        font_name: "Poppins-Medium.ttf"
        size_hint: .40, .065
        pos_hint: {"center_x": .25, "center_y": .45}
        canvas.before: 
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [2]  
            Color:
                rgb: 25/255, 38/255, 35/255, 1
    
    Button:
        text: "Codificar" # Alterar
        on_release: root.codificar()
        background_color: 25/255, 38/255, 35/255, 1
        font_name: "Poppins-Medium.ttf"
        size_hint: .40, .065
        pos_hint: {"center_x": .75, "center_y": .45}
        canvas.before:
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [2]  
            Color:
                rgb: 25/255, 38/255, 35/255, 1

    Button:
        text: "Salvar" # Alterar
        on_release:
            root.salvar()
        background_color: 25/255, 38/255, 35/255, 1
        font_name: "Poppins-Medium.ttf"
        size_hint: .40, .065
        pos_hint: {"center_x": .5, "center_y": .20}
        canvas.before:
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [2]  
            Color:
                rgb: 25/255, 38/255, 35/255, 1



    CaixaEntradaDeDados:
        pos_hint: {"center_x": .5, "center_y": .3}
        CaixaTitulo:
            text: "RESULTADO"
        CaixaImagem:
            source: "../images/msgtxt.png"
        CaixaInput:
            disabled: False
            multiline: True
            id: mensagemFinal

    # Ajuda
    MDLabel:
        text: "Ajuda"
        halign:"center"
        font_size: "14.5sp"
        font_name: "Poppins-SemiBold.ttf"
        pos_hint: {"center_x": .5, "center_y": .055}    
        id: ajuda
    
    MDIconButton:
        pos_hint: {"center_x": .5, "center_y": .02}      
        user_font_size: "45sp"
        icon: "chevron-right"
        on_press:
            app.root.current = "tela_ajuda"
            app.root.transition.direction = "left"

<TelaAjuda>:
    name: "tela_ajuda"

    MDLabel:
        id: labelAjuda
        text: "Para usar o aplicativo basta escrever,\na mensagem que desejar codificar ou traduzir\ne usar os botões para realizar as funções.\n\nDesenvolvido por Djalma Filho ;)\n"
        font_size: "14sp"
        font_name: "Poppins-Medium.ttf"
        pos_hint: {"center_x": .5, "center_y": .5}  
        halign: 'center'

    MDLabel:
        text: "Voltar"
        halign:"center"
        font_size: "14.5sp"
        font_name: "Poppins-SemiBold.ttf"
        pos_hint: {"center_x": .5, "center_y": .055}    
    
    MDIconButton:
        pos_hint: {"center_x": .5, "center_y": .02}      
        user_font_size: "45sp"
        icon: "chevron-left"
        on_press:
            app.root.current = "tela_principal"
            app.root.transition.direction = "right"
    

    

